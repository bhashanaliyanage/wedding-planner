        <item name="colorPrimary">@color/accent_light</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="colorOnPrimary">@color/accent_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_accent</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
