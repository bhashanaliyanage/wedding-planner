<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicesPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/top_card"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/urbanist_semi_bold"
                android:text="@string/subtitle"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/vesper_libre_medium"
                android:text="@string/title"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/dark_card">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/months"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/urbanist_bold"
                            android:text="@string/months"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/months_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="0dp"
                            android:fontFamily="@font/urbanist_regular"
                            android:text="@string/months_txt"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/weeks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="0dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:text="@string/weeks"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/weeks_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="0dp"
                            android:fontFamily="@font/urbanist_regular"
                            android:text="@string/weeks_txt"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="0dp"
                            android:fontFamily="@font/urbanist_bold"
                            android:text="@string/days"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/days_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="03dp"
                            android:layout_marginEnd="0dp"
                            android:fontFamily="@font/urbanist_regular"
                            android:text="@string/days_txt"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="25dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="25dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewDressing"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/dressing"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dressing"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewDressing"
                        app:layout_constraintStart_toStartOf="@+id/imageViewDressing"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewDressing"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                    <ImageView
                        android:id="@+id/imageViewOutfits"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/outfits"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewBoxes"
                        app:layout_constraintStart_toEndOf="@+id/imageViewDressing"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outfits"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewOutfits"
                        app:layout_constraintStart_toStartOf="@+id/imageViewOutfits"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewOutfits"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                    <ImageView
                        android:id="@+id/imageViewBoxes"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/boxes"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/wedding_cards_cake_boxes"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewBoxes"
                        app:layout_constraintStart_toStartOf="@+id/imageViewBoxes"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewBoxes"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewMarriage"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/registrar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/marriage_registrar"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewMarriage"
                        app:layout_constraintStart_toStartOf="@+id/imageViewMarriage"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewMarriage"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/imageViewPORU"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/poru"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewCars"
                        app:layout_constraintStart_toEndOf="@+id/imageViewMarriage"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ashtaka_amp_poru"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewPORU"
                        app:layout_constraintStart_toStartOf="@+id/imageViewPORU"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewPORU"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                    <ImageView
                        android:id="@+id/imageViewCars"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/cars"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wedding_cars"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewCars"
                        app:layout_constraintStart_toStartOf="@+id/imageViewCars"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewCars"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewProject"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/projector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="75dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="@string/projectors_amp_led_walls"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewProject"
                        app:layout_constraintStart_toStartOf="@+id/imageViewProject"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewProject"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                    <ImageView
                        android:id="@+id/imageViewCakes"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/cakes"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewEnt"
                        app:layout_constraintStart_toEndOf="@+id/imageViewProject"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cakes"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewCakes"
                        app:layout_constraintStart_toStartOf="@+id/imageViewCakes"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewCakes"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                    <ImageView
                        android:id="@+id/imageViewEnt"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="75dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="@string/entertainment"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewEnt"
                        app:layout_constraintStart_toStartOf="@+id/imageViewEnt"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewEnt"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewDeco"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/deco"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/decoration"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewDeco"
                        app:layout_constraintStart_toStartOf="@+id/imageViewDeco"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewDeco"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                    <ImageView
                        android:id="@+id/imageViewRings"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/rings"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewNull"
                        app:layout_constraintStart_toEndOf="@+id/imageViewDeco"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                    <TextView
                        android:layout_width="75dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="@string/rings_and_jewelleries"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewRings"
                        app:layout_constraintStart_toStartOf="@+id/imageViewRings"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewRings"
                        android:fontFamily="@font/urbanist_semi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/cardview_dark_background"/>

                    <ImageView
                        android:id="@+id/imageViewNull"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/servicesicon"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>